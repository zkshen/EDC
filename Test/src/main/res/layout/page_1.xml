<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="关闭"
        android:textSize="30dp"
        android:id="@+id/SensorState" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="时间"
        android:id="@+id/textView2"
        android:layout_marginBottom="87dp"
        android:layout_above="@+id/SensorState"
        android:layout_toLeftOf="@+id/SensorState"
        android:layout_toStartOf="@+id/SensorState" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/SensorState"
        android:layout_alignEnd="@+id/SensorState" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接传感器"
        android:id="@+id/Sensor"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/SensorState"
        android:layout_marginBottom="91dp" />

    <FrameLayout
        android:id="@+id/sample_content_fragment"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0px" />

</RelativeLayout>
